{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@config/*": ["src/config/*"],
            "@infra/*": ["src/infra/*"],
            "@modules/*": ["src/modules/*"],
            "@shared/*": ["src/shared/*"],
            "@test/*": ["test/*"]
        }
    }
}